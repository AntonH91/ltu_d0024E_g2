<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="186.0" prefWidth="208.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="dbbg2.view.controllers.user.UserLoginController">
    <VBox prefHeight="135.0" prefWidth="208.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <TextField fx:id="txtUserName" promptText="Username" GridPane.columnIndex="1"/>
            <PasswordField fx:id="pwdPassword" promptText="Password" GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>
            <Label text="Username"/>
            <Label text="Password" GridPane.rowIndex="1"/>
        </GridPane>
        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#handleCancelClick"
                        text="Cancel"/>
                <Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" onAction="#handleLoginClick"
                        text="Login"/>
            </buttons>
        </ButtonBar>
    </VBox>
</AnchorPane>
