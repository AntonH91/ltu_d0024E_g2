<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="itemOverviewAnchor" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dbbg2.view.controllers.item.item.search.ItemSearchController">
   <children>
      <TabPane layoutX="-2.0" prefHeight="400.0" prefWidth="606.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Book search">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tblBookList" layoutY="171.0" prefHeight="200.0" prefWidth="606.0">
                          <columns>
                              <TableColumn fx:id="tcInventoryId" prefWidth="75.0" text="Inventory ID" />
                            <TableColumn fx:id="tcTitle" prefWidth="75.0" text="Title" />
                            <TableColumn fx:id="tcAuthor" prefWidth="75.0" text="Author" />
                              <TableColumn fx:id="tcCategory" prefWidth="75.0" text="Category" />
                              <TableColumn fx:id="tcKeyword" prefWidth="75.0" text="Keyword" />
                          </columns>
                        </TableView>
                        <TextField fx:id="txtItemTitle" layoutX="36.0" layoutY="53.0" promptText="Title" />
                        <TextField fx:id="txtAuthor" layoutX="36.0" layoutY="81.0" promptText="Author" />
                        <TextField fx:id="txtCategory" layoutX="36.0" layoutY="109.0" promptText="Category" />
                        <TextField fx:id="txtKeyword" layoutX="36.0" layoutY="137.0" promptText="Keyword" />
                        <Button fx:id="btnSearchBook" layoutX="244.0" layoutY="124.0" mnemonicParsing="false" onAction="#handleSearchBookClick" text="Search" />
                        <Button fx:id="btnClearText" layoutX="315.0" layoutY="124.0" mnemonicParsing="false" onAction="#handleClearText" text="Clear" />
                        <CheckBox layoutX="244.0" layoutY="94.0" mnemonicParsing="false" text="Only show books available for borrowing" />
                        <TextField fx:id="txtItemId" layoutX="36.0" layoutY="25.0" promptText="Book ID" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
