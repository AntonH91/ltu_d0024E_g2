<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="dbbg2.view.controllers.user.details.EmployeeDetailController">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField fx:id="txtSalary" promptText="Salary" GridPane.columnIndex="1"/>
                <CheckBox fx:id="chkManagerAccess" mnemonicParsing="false" GridPane.columnIndex="1"
                          GridPane.rowIndex="1"/>
                <Label text="Salary"/>
                <Label text="Manager Access" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
