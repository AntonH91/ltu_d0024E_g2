                        <TextArea fx:id="txtAreaAuthor" layoutX="478.0" layoutY="257.0" prefHeight="66.0" prefWidth="109.0" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Untitled Tab 2">
